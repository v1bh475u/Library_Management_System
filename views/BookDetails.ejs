<html lang="en">

<head>
  <title>Book Details</title>
  <link rel="stylesheet" type="text/css" href="/css/BookDetails.css">
</head>

<body>
  <h1>
    <%= book.title %>
  </h1>
  <p>Author: <%= book.author %>
  </p>
  <p>Genre: <%= book.genre %>
  </p>
  <p>Quantity Available:<%=book.quantity%></p>
  <!--<% /* %> <p>Summary: <%= book.summary %>
</p> -->
  <!-- <p>Pages: <%= book.pages %>
</p>
<p>Publisher: <%= book.publisher %>
</p>
<p>Published: <%= book.published %>
  <% */ %>
</p> -->


  <% if (book.status==='available'&&!isBorrower) { %>
  <button onclick="checkoutBook(`<%= book.id %>`,`<%=book.title%>`,`<%=user.username%>`)">Checkout</button>
  <% } else { %>
  <% if (isBorrower) { %>
  <button onclick="checkinBook(`<%= book.id %>`,`<%=book.title%>`,`<%=user.username%>`)">Checkin</button>
  <% }%>
  <% } %>


  <h2>Borrowing History</h2>
  <div id="history">
    <% history.forEach(function(history) { %>
    <div>
      <p>Borrowed by <%= history.borrower %>
      </p>
      <p>Borrowed on <%= history.borrowed_date %></p>
      <% if (history.returned_date) { %>
      <p>Returned on <%= history.returned_date %>
      </p>
      <% } %>
    </div>
    <% }); %>
  </div>
  <button onclick="window.location.href='/books'">Back to Catalog</button>
</body>
<script src="/js/BookDetails.js"></script>

</html