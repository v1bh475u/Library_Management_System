<html lang="en">

<head>
  <title><% if(message==='Request Sent'){ %> Success!<% }else{ %> Error <% } %></title>
  <link rel="stylesheet" type="text/css" href="/css/error.css">
  <link rel="icon" href="/resources/Favicons/book.png" type="image/png">
</head>

<body>
  <p><%=error%></p>
  <% if(message==='SPAM') {%>
  <script>
    let img = document.createElement('img');
    img.src = '/resources/trolls/' + '<%=message%>' + '.jpg';
    document.body.appendChild(img);
  </script>
  <% }else{ %>
  <script>
    let img = document.createElement('img');
    img.src = '/resources/trolls/' + '<%=message%>' + '.gif';
    document.body.appendChild(img);
  </script>
  <% } %>
  <% if(message==='Request Sent'){ %>
  <button onclick="window.location.href='/books'">Back to Catalog</button>
  <% }else{ %>
  <button onclick="window.location.href='/'">Back to Home</button>
  <% } %>
</body>

</html>